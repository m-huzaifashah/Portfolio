{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",   // <--- important for Vite
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "types": ["node"],               // <--- so Node types like "path" work
    "jsx": "react-jsx"
  },
  "include": ["src", "vite.config.ts"]
}
